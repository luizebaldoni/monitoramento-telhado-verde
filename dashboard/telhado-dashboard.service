[Unit]
Description=Telhado Verde Dashboard (Streamlit)
After=network.target

[Service]
User=www-data
WorkingDirectory=/srv/monitoramento-telhado-verde/dashboard
ExecStart=/srv/monitoramento-telhado-verde/dashboard/.venv/bin/streamlit run dashboard.py --server.port 8501 --server.address 0.0.0.0
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target

